---
import CenteredLayout from '../layouts/CenteredLayout.astro';
import Link from '../components/Link.astro';
---

<CenteredLayout>
  <header is-="column" gap-="1" space-="px:1">
    <h1 autofocus>contact</h1>
    <p>this is how you can reach out to me!</p>

    <div id="contact" box-="square" shear-="top">
      <row>
        <span is-="badge" variant-="background0">
          contact
        </span>
      </row>
      <column space-="px:1 pb:1" is-="typography-block">
        <Link href="mailto:hello@radsteve.net">
          <code id="nf">&#xf01f0</code>
          <span>mail: hello [at] radsteve [dot] net</span>
        </Link>

        <Link href="mailto:rad@potassium.sh">
          <code id="nf">&#xf01f0</code>
          <span>mail (potassium.sh): rad [at] potassium [dot] sh</span>
        </Link>

        <Link href="https://discord.gg/DEDEu3dY">
          <code id="nf">&#xf1ff</code>
          <span>discord: @radstevee</span>
        </Link>

        <Link href="https://bsky.app/profile/rad.being.cat">
          <code id="nf">&#xe28e</code>
          <span>atproto/bsky: @rad.being.cat</span>
        </Link>

        <Link href="https://x.com/radstevee_/">
          <code id="nf">&#xeb72</code>
          <span>twitter: @radstevee_ (inactive, use bsky instead)</span>
        </Link>
      </column>
    </div>
  </header>
</CenteredLayout>

<style>
#nf {
  font-family: "JetBrains Mono", Menlo, Monaco, monospace, "Symbols Nerd Font";
}
</style>

